{
  "name": "@sql-playground/api",
  "version": "0.1.0",
  "description": "SQL Playground REST API backend with LLM integration and caching",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "node --loader ts-node/esm src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests --max-warnings=0",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "clean": "rm -rf dist",
    "db:migrate": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio"
  },
  "keywords": [
    "sql",
    "database",
    "api",
    "llm",
    "fastify"
  ],
  "author": "SQL Playground Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/sql-playground/sql-playground-api.git"
  },
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@gabrudj/sql-engine": "^0.1.2",
    "@prisma/client": "^5.7.1",
    "fastify": "^4.25.2",
    "openai": "^4.40.0",
    "pino": "^8.17.2",
    "pino-http": "^8.6.1",
    "pino-pretty": "^13.1.3",
    "prom-client": "^15.0.0",
    "redis": "^4.6.13",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "prisma": "^5.7.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
