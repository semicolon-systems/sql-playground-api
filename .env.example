# ============================================
# SUPABASE (PostgreSQL) - Free tier available
# ============================================
# Get these from https://supabase.com/dashboard
DATABASE_URL="postgresql://postgres.xxxxxx:password@db.xxxxxx.supabase.co:5432/postgres?schema=public&sslmode=require"

# Optional: Set to "supabase" to use Supabase-specific features
DATABASE_PROVIDER="supabase"

# ============================================
# UPSTASH (Redis) - Free tier available
# ============================================
# Get from https://console.upstash.com
REDIS_URL="redis://default:password@us1-shiny-xxxxxx.upstash.io:36379"

# Optional: For REST API (alternative to client connection)
UPSTASH_REDIS_REST_URL="https://us1-shiny-xxxxxx.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your_rest_token_here"

# ============================================
# LLM Provider
# ============================================
# Options: "openai", "stub"
LLM_PROVIDER="stub"
OPENAI_API_KEY="sk-your-api-key-here"  # Only needed if LLM_PROVIDER=openai

# ============================================
# API Configuration
# ============================================
NODE_ENV="production"
PORT=3000
LOG_LEVEL="info"

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# ============================================
# Features & Rate Limiting
# ============================================
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MS=60000
MAX_REQUESTS_PER_WINDOW=100

# ============================================
# Deployment Platform
# ============================================
# Options: "railway", "render", "vercel", "heroku", "local"
DEPLOYMENT_PLATFORM="railway"

# ============================================
# Monitoring (Optional)
# ============================================
SENTRY_DSN=""
DATADOG_API_KEY=""

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGIN="https://your-domain.pages.dev,http://localhost:5173"
RATE_LIMIT_MAX_REQUESTS=100

# Privacy
DEFAULT_PRIVACY_MODE=true
